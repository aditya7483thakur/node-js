<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>{{title}}</h1>

    <form id="weatherForm">
      <input
        type="text"
        id="cityInput"
        placeholder="Enter city name"
        required
      />
      <button type="submit">Get Weather</button>
    </form>

    <div id="weatherResult"></div>

    <script>
      const form = document.getElementById('weatherForm'); const resultDiv =
      document.getElementById('weatherResult'); form.addEventListener('submit',
      async (e) => { e.preventDefault(); const city =
      document.getElementById('cityInput').value; const response = await
      fetch(`/weather?city=${city}`); const data = await response.json();
      resultDiv.innerHTML = ` <h2>Weather in ${data.city}</h2> <p>Temperature:
      ${data.temperature}</p> <p>Condition: ${data.condition}</p> <p>Humidity:
      ${data.humidity}</p> <p>Wind: ${data.wind}</p> `; });
    </script>
  </body>
</html>